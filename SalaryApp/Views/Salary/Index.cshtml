@model IEnumerable<SalaryApp.Models.Salary>

@{
    ViewData["Title"] = "Salary Records";
}

<div class="container mt-4">
    <h2>Salary Records</h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Employee</th>
                    <th>Position</th>
                    <th>Period</th>
                    <th>Base Salary</th>
                    <th>Bonus</th>
                    <th>Deduction</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Employee.FirstName @item.Employee.LastName</td>
                        <td>@item.Employee.Position.Title</td>
                        <td>@item.PeriodStart.ToShortDateString() - @item.PeriodEnd.ToShortDateString()</td>
                        <td>@item.Employee.Position.BaseSalary.ToString("C")</td>
                        <td>@item.Bonus.ToString("C")</td>
                        <td>@item.Deduction.ToString("C")</td>
                        <td>@((item.Employee.Position.BaseSalary + item.Bonus - item.Deduction).ToString("C"))</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 