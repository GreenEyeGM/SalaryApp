@model SalaryApp.Models.Salary

@{
    ViewData["Title"] = "Delete Salary Record";
}

<div class="container mt-4">
    <h2>Delete Salary Record</h2>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this salary record?</h4>
    </div>
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Employee</dt>
                <dd class="col-sm-9">@Model.Employee.FirstName @Model.Employee.LastName</dd>

                <dt class="col-sm-3">Position</dt>
                <dd class="col-sm-9">@Model.Employee.Position.Title</dd>

                <dt class="col-sm-3">Period</dt>
                <dd class="col-sm-9">@Model.PeriodStart.ToShortDateString() - @Model.PeriodEnd.ToShortDateString()</dd>

                <dt class="col-sm-3">Base Salary</dt>
                <dd class="col-sm-9">@Model.Employee.Position.BaseSalary.ToString("C")</dd>

                <dt class="col-sm-3">Bonus</dt>
                <dd class="col-sm-9">@Model.Bonus.ToString("C")</dd>

                <dt class="col-sm-3">Deduction</dt>
                <dd class="col-sm-9">@Model.Deduction.ToString("C")</dd>

                <dt class="col-sm-3">Total</dt>
                <dd class="col-sm-9">@((Model.Employee.Position.BaseSalary + Model.Bonus - Model.Deduction).ToString("C"))</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="Employee" asp-action="Details" asp-route-id="@Model.EmployeeId" class="btn btn-secondary">Cancel</a>
    </form>
</div> 