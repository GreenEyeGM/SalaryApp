@model SalaryApp.Models.ViewModels.SalaryCreateViewModel

@{
    ViewData["Title"] = "Create Salary Record";
}

<div class="container-fluid">
    <h1>Create Salary Record</h1>
    <h4>@Model.EmployeeFirstName @Model.EmployeeLastName - @Model.PositionTitle</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" asp-route-employeeId="@Model.EmployeeId">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="PeriodStart" class="control-label">Period Start</label>
                            <input asp-for="PeriodStart" class="form-control" type="date" />
                            <span asp-validation-for="PeriodStart" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PeriodEnd" class="control-label">Period End</label>
                            <input asp-for="PeriodEnd" class="form-control" type="date" />
                            <span asp-validation-for="PeriodEnd" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Bonus" class="control-label">Bonus</label>
                            <input asp-for="Bonus" class="form-control" type="number" step="0.01" min="0" />
                            <span asp-validation-for="Bonus" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Deduction" class="control-label">Deduction</label>
                            <input asp-for="Deduction" class="form-control" type="number" step="0.01" min="0" />
                            <span asp-validation-for="Deduction" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <strong>Base Salary:</strong> @Model.BaseSalary.ToString("C")
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create
                            </button>
                            <a asp-controller="Employee" asp-action="Details" asp-route-id="@Model.EmployeeId" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Employee
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Set default values for period dates
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date();
            const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
            const lastDay = new Date(today.getFullYear(), today.getMonth() + 1, 0);
            
            document.getElementById('PeriodStart').value = firstDay.toISOString().split('T')[0];
            document.getElementById('PeriodEnd').value = lastDay.toISOString().split('T')[0];
        });
    </script>
} 